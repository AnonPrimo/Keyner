<Window x:Class="Keyner_v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyner_v1"
        mc:Ignorable="d"
        Title="MainWindow" Height="325" Width="525"
        Loaded="Window_Loaded"
        WindowStyle="None" 
        AllowsTransparency="True" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="keylog.png"></ImageBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="277*"/>
        </Grid.ColumnDefinitions>

        <ProgressBar Name="PB" HorizontalAlignment="Left" Height="32" Margin="30,214,0,0" VerticalAlignment="Top" Width="450" RenderTransformOrigin="0.494,0.822"  Minimum="0" Maximum="100" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
