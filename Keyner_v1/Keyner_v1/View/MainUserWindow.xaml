<Window x:Class="Keyner_v1.View.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyner_v1.View"
        mc:Ignorable="d"
        Title="MainUserWindow" Height="350" Width="550" Background="LightCyan">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DataGrid Name="datagrid1" Grid.Column="0" Grid.RowSpan="3" Margin="10" Background="Lavender" SelectionUnit="FullRow" SelectionMode="Single" MouseDown="datagrid1_MouseDown">
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Name="txt1" Margin="5"></TextBlock>
            <DockPanel>
                <Image Name="moneyIm" Margin="5" Height="20" Width="30"></Image>
                <TextBlock Name="txt2" Margin="5" Width="40"></TextBlock>
                <TextBlock Name="txt3" Margin="5"></TextBlock>
            </DockPanel>
        </StackPanel>

            <Image Name="monster" Grid.Column="1" Grid.Row="1" Margin="20"></Image>
        
        <DockPanel Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">
            <Button Name="gamebutton" Content="Go" FontSize="20" FontWeight="Bold" Width="50" Margin="10"  Background="LightGreen" HorizontalAlignment="Left" Click="gamebutton_Click"></Button>
            <Button Name="shopbutton" Content="Shop"  Margin="30,10" Width="60" Background="Cyan" Click="shopbutton_Click"></Button>
            <Button Name="settingbutton" Content="Settings" Margin="10" Width="50" Background="CadetBlue"></Button>
        </DockPanel>
        
    </Grid>
</Window>
